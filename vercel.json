{
  "version": 2,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "back/server.cjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "back/server.cjs" },
    { "src": "/assets/(.*)", "dest": "front/assets/$1" },
    { "src": "/(.*)", "dest": "front/index.html" }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
}
